@using DLInventoryApp.ViewModels.Inventories
@model IEnumerable<MyInventoryRowVm>
@using System.Linq

<h2>All Inventories</h2>

@if (!Model.Any())
{
    <p>No inventories yet.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Tags</th>
                <th>Items</th>
                <th>Visibility</th>
                <th>Last Updated</th>
                <th>Discussion</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@inv.Id">
                            @inv.Title
                        </a>
                    </td>

                    <td>
                        @(inv.CategoryName ?? "-")
                    </td>

                    <td>
                        @if (inv.Tags != null && inv.Tags.Any())
                        {
                            <div style="display:flex; gap:6px; flex-wrap:wrap;">
                                @foreach (var t in inv.Tags)
                                {
                                    <a asp-action="Index"
                                       asp-route-tag="@t"
                                       style="padding:2px 8px; background:#eee; border-radius:12px; font-size:12px; text-decoration:none;">
                                        @t
                                    </a>
                                }
                            </div>
                        }
                        else
                        {
                            <span style="color:#888;">-</span>
                        }
                    </td>

                    <td>
                        <a asp-controller="Items"
                           asp-action="Index"
                           asp-route-inventoryId="@inv.Id">
                            @inv.ItemsCount
                        </a>
                    </td>

                    <td>
                        @(inv.IsPublic ? "Public" : "Private")
                    </td>

                    <td>
                        @(inv.UpdatedAt ?? inv.CreatedAt)
                    </td>
                    <td>
                        <a asp-controller="Discussion"
                           asp-action="Index"
                           asp-route-inventoryId="@inv.Id">
                            Discussion
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}