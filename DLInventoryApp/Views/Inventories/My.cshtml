@using DLInventoryApp.ViewModels.Inventories
@model IEnumerable<MyInventoryRowVm>
<h2>My Inventories</h2>
@if (!Model.Any())
{
    <p>No inventories yet.</p>
}
else
{
    <table>
        <thead>
            <tr>
                <th>Title</th>
                <th>Category</th>
                <th>Items</th>
                <th>Visibility</th>
                <th>Last Updated</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var inv in Model)
            {
                <tr>
                    <td>@inv.Title</td>
                    <td>
                        @(inv.CategoryName ?? "-")
                    </td>
                    <td>@inv.ItemsCount</td>
                    <td>
                        @(inv.IsPublic ? "Public" : "Private")
                    </td>
                    <td>
                        @(inv.UpdatedAt ?? inv.CreatedAt)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}